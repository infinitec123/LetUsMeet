<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Style.Flipkart.Seller.Widget.CardNormal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FEF8D3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/keyline_1">

        <TextView
            android:id="@+id/id_ftue_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/keyline_1"
            android:layout_marginRight="@dimen/keyline_1"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.Flipkart.Seller.Body2"
            tools:text="FTUE Title" />

        <TextView
            android:id="@+id/id_ftue_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/keyline_1"
            android:layout_marginRight="@dimen/keyline_1"
            android:layout_marginTop="@dimen/keyline_1_minus_8dp"
            android:textAppearance="@style/TextAppearance.Flipkart.Seller.Body1"
            tools:text="FTUE description" />

        <View
            android:background="#1f000000"
            android:gravity="start|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/keyline_1_minus_8dp"
            android:layout_marginRight="@dimen/keyline_1_minus_8dp"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/id_confirmation_button"
            style="@style/flat_button_style"
            android:layout_gravity="end"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="@dimen/keyline_1_minus_8dp"
            android:layout_marginRight="@dimen/keyline_1_minus_8dp"
            android:layout_marginTop="6dp"
            android:text="Ok, Got it"
            android:textAppearance="@style/TextAppearance.Flipkart.Seller.Button" />

    </LinearLayout>

</android.support.v7.widget.CardView>

